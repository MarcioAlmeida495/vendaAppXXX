<div class="aesquerda">
    <a class="itens" href="/addCliente.ejs">ADD CLIENTE</a>
    <a class="itens" id="fiadohoje">FIADO</a>
    <a class="itens" href="/diario">HOJE</a>
    <%try{%>
    <hr>
    <form method="post" action="/busca">
        <input  class="input" autocomplete="off" id="busca" placeholder="Realizar Busca" type="text" name="busca">
    </form>

    <%ldados.forEach((valor)=>{%> 
        
        <a class="itens" href=<%=valor.link%> name=<%=valor.link%>><%=valor.nome%></a>
    <%})%>
    
    <%}catch{%>
